<%curr_band =  Album.find(params[:album_id]).band%>
<h2>Add a track for <%=curr_band.name%></h2>
<form action="<%=tracks_url%>" method="POST">
  <% authenticity_token %>
  <label for "album_name">Album: </label>
  <select id="album_name" name="track[album_id]">
    <% curr_band.albums.each do |album| %>
      <%if (album.id == params[:album_id].to_i)%>
        <option value="<%=album.id%>" selected>
          <%=album.title%>
        </option>
      <%else%>
        <option value="<%album.id%>">
          <%=album.title%>
        </option>
      <%end%>
    <%end%>
  </select>
  <br><br>

  <label for="track_title">Track Title:</label>
  <input type="text"
         name="track[title]"
         value="<%=@track.title%>"
         id="track_title">

  <br>
  <input type="radio"
         name="track[bonus]"
         checked="<%=!@track.bonus%>"
         value="false">Regular track</input>
  <input type="radio"
         name="track[bonus]"
         checked="<%=@track.bonus%>"
         value="true">Bonus track</input>

  <input type="submit" value="Submit">
</form>
